---
// This is the layout for the root pages ex: '/[pageName]'.
import Layout from "@layouts/Layout.astro";

// types
type Props = {
  tabTitle: string;
  description?: string;
  image?: string;
};

// props
const { tabTitle, description, image } = Astro.props;
---

<Layout
  categoryTabTitle="avi"
  pageTabTitle={tabTitle}
  showNav={true}
  description={description}
  image={image}
>
  <slot />
</Layout>
