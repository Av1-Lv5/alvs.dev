---
import { Icon } from "astro-icon/components";

const skills = [
	{ name: "Next.js", icon: "simple-icons:nextdotjs" },
	{ name: "TypeScript", icon: "simple-icons:typescript" },
	{ name: "Tailwind CSS", icon: "simple-icons:tailwindcss" },
	{ name: "Supabase", icon: "simple-icons:supabase" },
	{ name: "Clerk", icon: "simple-icons:clerk" },
	{ name: "Shadcn UI", icon: "simple-icons:shadcnui" },
	{ name: "Vercel", icon: "simple-icons:vercel" },
	{ name: "PostHog", icon: "simple-icons:posthog" },
	{ name: "Biome", icon: "simple-icons:biome" },
	{ name: "Git", icon: "simple-icons:git" },
	{ name: "Bash", icon: "simple-icons:gnubash" },
];
---

<div id="skills">
	{
		skills.map((skill) => (
			<div class="skill">
				<Icon name={skill.icon} class="icon" />
				<span>{skill.name}</span>
			</div>
		))
	}
</div>

<style>
	#skills {
		display: flex;
		justify-content: start;
		flex-wrap: wrap;
		gap: 12px;
	}

	.skill {
		display: flex;
		align-items: center;
		gap: 8px;
		user-select: none;
		padding: 8px 16px;
		border: 1px solid var(--border);
		border-radius: 6px;
		font-size: 0.9rem;
		transition: all 0.2s ease;
		background-color: var(--overlay-bg, transparent);
	}

	.skill:hover {
		background-color: var(--hover-bg, rgba(255, 255, 255, 0.05));
		border-color: var(--text-color);
	}

	.icon {
		width: 18px;
		height: 18px;
		color: var(--text-color);
	}
</style>
