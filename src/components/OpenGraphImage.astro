---
import { Icon } from "astro-icon/components";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Avinash",
  description = "Frontend dev. Fancy editor, but mostly just centering divs and rounding corners until bored.",
} = Astro.props;

const skills = [
  { name: "Next.js", icon: "simple-icons:nextdotjs" },
  { name: "TypeScript", icon: "simple-icons:typescript" },
  { name: "Tailwind CSS", icon: "simple-icons:tailwindcss" },
  { name: "Supabase", icon: "simple-icons:supabase" },
  { name: "Shadcn UI", icon: "simple-icons:shadcnui" },
];
---

<div id="og-image" class="og-container">
  <div class="og-content">
    <header class="og-header">
      <div class="og-brand">
        <div class="cube-accent"></div>
        <span class="domain">alvs.dev</span>
      </div>
      <div class="og-badge">Available for projects</div>
    </header>

    <main class="og-main">
      <h1 class="og-title">{title}</h1>
      <p class="og-description">{description}</p>
    </main>

    <footer class="og-footer">
      <h2 class="section-label">Toolkit</h2>
      <div class="skills-grid">
        {
          skills.map((skill) => (
            <div class="skill-pill">
              <Icon name={skill.icon} size={22} />
              <span>{skill.name}</span>
            </div>
          ))
        }
      </div>
    </footer>
  </div>
</div>

<style>
  .og-container {
    width: 1200px;
    height: 630px;
    background-color: #0a0a0a;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    font-family:
      "Inter",
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      sans-serif;
    color: #f9fafb;
  }

  .og-content {
    width: 1120px;
    height: 540px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 60px;
    border: 1px solid #262626;
    background: #0a0a0a;
    border-radius: 16px;
  }

  .og-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .og-brand {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .cube-accent {
    width: 24px;
    height: 24px;
    background-color: #3b82f6;
    border-radius: 6px;
  }

  .domain {
    font-size: 24px;
    font-weight: 700;
    letter-spacing: -0.04em;
    color: #ffffff;
  }

  .og-badge {
    font-size: 13px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: #22c55e;
    padding: 6px 14px;
    background: rgba(34, 197, 94, 0.1);
    border: 1px solid rgba(34, 197, 94, 0.2);
    border-radius: 100px;
  }

  .og-main {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 20px;
  }

  .og-title {
    font-size: 88px;
    font-weight: 800;
    line-height: 1.1;
    margin: 0;
    letter-spacing: -0.05em;
    color: #ffffff;
  }

  .og-description {
    font-size: 34px;
    color: #9ca3af;
    margin: 0;
    line-height: 1.4;
    max-width: 900px;
    font-weight: 450;
  }

  .section-label {
    font-size: 13px;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: #4b5563;
    font-weight: 700;
    margin-bottom: 24px;
    border-bottom: 1px solid #1f2937;
    padding-bottom: 8px;
    width: 100%;
  }

  .skills-grid {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
  }

  .skill-pill {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 10px 20px;
    border: 1px solid #262626;
    border-radius: 8px;
    background: #111111;
    font-size: 18px;
    font-weight: 600;
    color: #d1d5db;
  }

  .skill-pill [data-icon] {
    color: #9ca3af;
  }
</style>
