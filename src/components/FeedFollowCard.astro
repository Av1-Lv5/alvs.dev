---
import { Icon } from "astro-icon/components";

interface Props {
  name: string;
  description: string;
  url: string;
  feed: string;
}

const { name, description, url, feed } = Astro.props;
---

<div class="card follow-card">
  <div class="card-header">
    <h3>{name}</h3>
    <p>{description}</p>
  </div>
  <div class="card-footer">
    <a href={url} target="_blank" class="nav-like">
      <Icon name="lucide:arrow-up-right" size={16} />
      Visit
    </a>
    <a href={feed} target="_blank" class="nav-like">
      <Icon name="lucide:rss" size={14} />
      RSS
    </a>
  </div>
</div>

<style>
  .follow-card {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
  }

  .card-header h3 {
    margin: 0;
    font-size: 1.25rem;
    color: var(--text);
  }

  .card-header p {
    margin: 0.75rem 0 1.5rem;
    font-size: 0.9rem;
    color: var(--text-light);
    line-height: 1.5;
  }

  .card-footer {
    display: flex;
    gap: 0.75rem;
  }

  .card-footer a {
    font-size: 0.8rem;
    padding: 0.4rem 1rem;
  }

  .nav-like {
    display: flex;
    align-items: center;
    gap: 0.3rem;
  }
</style>
