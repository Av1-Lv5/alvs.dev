---
interface Props {
  currentPage: number;
  totalPages: number;
  hasNext?: boolean;
  hasPrev?: boolean;
  nextUrl?: string;
  prevUrl?: string;
}

const { currentPage, totalPages, hasNext, hasPrev, nextUrl, prevUrl } =
  Astro.props;
---

{
  totalPages > 1 && (
    <nav class="pagination">
      {hasPrev && <a href={prevUrl}>← Previous</a>}

      {Array.from({ length: totalPages }, (_, i) => i + 1).map((pageNum) => (
        <a
          href={pageNum === 1 ? "/books" : `/books/${pageNum}`}
          class={pageNum === currentPage ? "current" : ""}
        >
          {pageNum}
        </a>
      ))}

      {hasNext && <a href={nextUrl}>Next →</a>}
    </nav>
  )
}

<style>
  .pagination {
    display: flex;
    gap: 0.5rem;
    justify-content: center;
    margin: 4rem 0 3rem 0;
    flex-wrap: wrap;
  }

  .pagination a {
    padding: 0.5rem 1.25rem;
    text-decoration: none;
    font-size: 1rem;
    font-weight: 500;
    transition: all 0.2s ease;
    background: transparent;
    color: var(--text-light);
    border-radius: 8px;
  }

  .pagination a:hover,
  .pagination a.current {
    color: var(--accent);
    background: var(--bg-alt);
    transform: translateY(-1px);
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .pagination {
      gap: 0.375rem;
      margin: 3rem 0 2rem 0;
    }

    .pagination a {
      padding: 0.375rem 1rem;
      font-size: 0.9rem;
    }
  }
</style>
