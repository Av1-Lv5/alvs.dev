---
import type { CollectionEntry } from "astro:content";

interface Props {
  book: CollectionEntry<"books">;
}

const { book } = Astro.props;
---

<div class="book-card">
  <img
    src={book.data.cover}
    alt={`${book.data.title} cover`}
    loading="lazy"
    class="cover"
  />
  <p class="title">{book.data.title}</p>
  <p class="author">{book.data.author}</p>
</div>

<style>
  .book-card {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .cover {
    width: 100%;
    aspect-ratio: 2 / 3;
    object-fit: cover;
    border-radius: 4px;
    border: 1px solid var(--border-muted);
    display: block;
  }

  .title {
    margin: 0;
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--text);
    line-height: 1.3;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    min-height: calc(1.3em * 2);
  }

  .author {
    margin: 0;
    font-size: 0.75rem;
    font-family: var(--mono);
    color: var(--text-light);
  }
</style>
