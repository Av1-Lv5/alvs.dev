---
// types
import type { CollectionEntry } from "astro:content";
export interface Props {
  project: CollectionEntry<"projects">;
}

// props
const { project } = Astro.props as Props;
---

<div class="product-item">
  <h3 class="title">{project.data.title}</h3>
  <p class="description">
    {project.data.description}
  </p>
  <div class="product-meta">
    {
      project.data.liveAt && (
        <a
          href={`https://${project.data.liveAt}`}
          target="_blank"
          class="meta-link"
          title="View live"
        >
          ↗
        </a>
      )
    }
    {
      project.data.repoId && (
        <a
          href={`https://github.com/Av1-Lv5/${project.data.repoId}`}
          target="_blank"
          class="meta-link"
          title="View code"
        >
          ⌘
        </a>
      )
    }
  </div>
</div>

<style>
  .product-item {
    display: flex;
    align-items: center;
    gap: 2rem;
    padding: 1.25rem 0;
    border-bottom: 1px solid var(--border-muted);
  }

  .product-item:last-child {
    border-bottom: none;
  }

  .title {
    margin: 0;
    font-size: 1.125rem;
    font-weight: 600;
    line-height: 1.3;
    letter-spacing: -0.015em;
    color: var(--text);
    flex-shrink: 0;
    min-width: 180px;
    max-width: 220px;
  }

  .description {
    margin: 0;
    flex: 1;
  }

  .product-meta {
    display: flex;
    gap: 0.5rem;
    align-items: center;
    flex-shrink: 0;
  }

  .meta-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 1.75rem;
    height: 1.75rem;
    font-size: 1rem;
    color: var(--text-light);
    text-decoration: none;
    border: 1px solid var(--border-muted);
    border-radius: 0.25rem;
    transition: all 0.2s ease;
    background-color: transparent;
  }

  .meta-link:hover {
    color: var(--text);
    border-color: var(--accent);
    background-color: rgba(var(--accent-rgb, 100, 100, 100), 0.05);
    transform: scale(1.05);
  }

  @media (max-width: 768px) {
    .product-item {
      display: grid;
      grid-template-columns: 1fr auto;
      grid-template-rows: auto auto;
      gap: 0.75rem;
      padding: 1.5rem 0;
    }

    .title {
      grid-column: 1;
      grid-row: 1;
      font-size: 1.125rem;
      min-width: unset;
      max-width: unset;
    }

    .product-meta {
      grid-column: 2;
      grid-row: 1;
    }

    .description {
      grid-column: 1 / -1;
      grid-row: 2;
    }

    .meta-link {
      width: 1.625rem;
      height: 1.625rem;
      font-size: 0.9375rem;
    }
  }
</style>
