---
import { socials } from "src/constants";
---

<footer aria-label="footer">
	<p>
		Built with <a href="https://astro.build/" target="_blank">Astro</a>
	</p>
	<div class="socials">
		<a
			href={`https://github.com/${socials.githubUsername}/`}
			target="_blank">Github</a
		>
		<a href={`mailto:${socials.email}`}>Email</a>
		<a rel="me" href={`${socials.linkedin}`}>LinkedIn</a>
		<a rel="me" href={`${socials.mastodon}`}>Mastodon</a>
	</div>
</footer>
<style>
	footer {
		display: flex;
		flex-direction: column-reverse;
		align-items: center;
		flex-wrap: wrap;
		justify-content: space-between;
		gap: 25px;
	}
	@media screen and (min-width: 480px) {
		footer {
			flex-direction: row;
		}
	}
</style>
