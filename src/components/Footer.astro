---
import { socials } from "src/constants";
import AvRunner from "@components/AvRunner.astro";
---

<footer aria-label="footer">
  <div class="footer-container">
    <div class="footer-left">
      <p>
        Built with <a href="https://astro.build/" target="_blank">Astro</a> • View
        source on
        <a
          href={`https://github.com/${socials.githubUsername}/alvs.dev`}
          target="_blank"
        >
          GitHub
        </a>
      </p>
    </div>
    <div class="footer-right">
      <p class="footer-meta">
        <a href="/sitemap">Sitemap</a> •
        <a href="/llms.txt" target="_blank">llms.txt</a> •
        <a href="/colophon">Colophon</a>
      </p>
    </div>
  </div>
  <AvRunner />
</footer>

<style>
  .footer-container {
    display: flex;
    align-items: center;
    flex-direction: row;
    justify-content: space-between;
  }

  .footer-left {
    text-align: left;
  }

  .footer-meta {
    font-size: 0.8rem;
    opacity: 0.7;
    display: flex;
    gap: 0.5rem;
  }

  .footer-meta a {
    color: var(--text-light);
    text-decoration: none;
    transition: var(--transition);
  }

  .footer-meta a:hover {
    color: var(--text);
    text-decoration: underline;
  }

  .footer-right {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 1rem;
    text-align: right;
  }

  @media (max-width: 768px) {
    .footer-left,
    .footer-right {
      display: flex;
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    .footer-container {
      flex-direction: column;
    }

    .footer-meta {
      justify-content: center;
    }
  }
</style>
