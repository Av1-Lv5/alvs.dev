---
import { Icon } from "astro-icon/components";
---

<div class="theme-toggle-container">
  <button id="theme-toggle" aria-label="Toggle theme" title="Toggle theme">
    <Icon name="lucide:sun" class="sun-icon" size={20} />
    <Icon name="lucide:moon" class="moon-icon" size={20} />
    <!-- <Icon name="lucide:monitor" class="system-icon" size={20} /> -->
  </button>
</div>

<script>
  import { switchOffSound } from "@utils/sound/switch-off.ts";
  import { playSound } from "@utils/sound/sound-engine.ts";

  if (localStorage.getItem("theme") === "system") {
    localStorage.removeItem("theme");
  }

  const toggle = document.getElementById("theme-toggle");

  const getTheme = () => {
    return localStorage.getItem("theme") || "dark";
  };

  const setTheme = (theme: string) => {
    localStorage.setItem("theme", theme);
    if (theme === "dark") {
      document.documentElement.setAttribute("data-theme", "dark");
    } else if (theme === "light") {
      document.documentElement.setAttribute("data-theme", "light");
    } else {
      document.documentElement.setAttribute("data-theme", "dark");
    }
  };

  toggle?.addEventListener("click", async () => {
    await playSound(switchOffSound.dataUri, { volume: 0.04 });
    const currentTheme = getTheme();
    const nextTheme = currentTheme === "dark" ? "light" : "dark";

    if (!("startViewTransition" in document)) {
      setTheme(nextTheme);
      return;
    }

    document.documentElement.classList.add("theme-transitioning");
    const transition = (document as any).startViewTransition(() => {
      setTheme(nextTheme);
    });
    transition.finished.finally(() => {
      document.documentElement.classList.remove("theme-transitioning");
    });
  });
</script>

<style>
  .theme-toggle-container {
    display: flex;
    align-items: center;
  }

  button {
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
    color: var(--text-muted);
    transition: var(--transition);
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  button:hover {
    color: var(--text);
  }

  button svg {
    display: none;
  }

  :global(:root:not([data-theme])) .system-icon {
    display: block;
  }
  :global(:root[data-theme="light"]) .sun-icon {
    display: block;
  }
  :global(:root[data-theme="dark"]) .moon-icon {
    display: block;
  }
</style>

<style is:global>
  @keyframes theme-reveal-down {
    from {
      clip-path: inset(0 0 100% 0);
    }
    to {
      clip-path: inset(0 0 0% 0);
    }
  }

  ::view-transition-old(root) {
    animation: none;
  }

  ::view-transition-new(root) {
    animation: theme-reveal-down 0.45s ease forwards;
  }

  html.theme-transitioning * {
    user-select: none !important;
    pointer-events: none !important;
  }
</style>
