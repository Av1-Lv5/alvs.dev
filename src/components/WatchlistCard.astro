---
import type { TMDBMedia } from "@utils/tmdb";

interface Props {
  media: TMDBMedia;
}

const { media } = Astro.props;
const typeLabel = media.mediaType === "movie" ? "Film" : "Show";
---

<a
  href={media.tmdbUrl}
  target="_blank"
  rel="noopener noreferrer"
  class="watchlist-card"
>
  <div class="thumb-wrap">
    {
      media.posterUrl ? (
        <img
          src={media.posterUrl}
          alt={media.title}
          width="56"
          height="84"
          loading="lazy"
          class="thumb"
        />
      ) : (
        <div class="thumb placeholder" aria-hidden="true" />
      )
    }
  </div>

  <div class="info">
    <div class="top-row">
      <span class="title">{media.title}</span>
      <span class="type-badge">{typeLabel}</span>
    </div>

    <div class="meta">
      {media.year > 0 && <span>{media.year}</span>}
      {
        media.rating > 0 && (
          <>
            <span aria-hidden="true">&middot;</span>
            <span>
              <span aria-hidden="true">&#9733;</span>
              {media.rating}
            </span>
          </>
        )
      }
      {
        media.genres.length > 0 && (
          <>
            <span aria-hidden="true">&middot;</span>
            <span>{media.genres.slice(0, 2).join(", ")}</span>
          </>
        )
      }
    </div>
  </div>

  <span class="arrow" aria-hidden="true">&#x2197;</span>
</a>

<style>
  .watchlist-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.75rem 1rem;
    border: 1px solid var(--border-muted);
    border-radius: var(--radius);
    text-decoration: none;
    color: inherit;
    transition: var(--transition);
    background: transparent;
  }

  .watchlist-card:hover {
    border-color: var(--accent);
    background: var(--accent-bg);
    text-decoration: none;
  }

  .watchlist-card + .watchlist-card {
    margin-top: 0.5rem;
  }

  .thumb-wrap {
    flex-shrink: 0;
    width: 40px;
    height: 60px;
    border-radius: 4px;
    overflow: hidden;
    border: 1px solid var(--border);
  }

  .thumb {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .placeholder {
    width: 100%;
    height: 100%;
    background: var(--accent-bg);
  }

  .info {
    flex: 1;
    min-width: 0;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .top-row {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .title {
    font-size: 0.9375rem;
    font-weight: 500;
    color: var(--text);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    transition: var(--transition);
  }

  .watchlist-card:hover .title {
    color: var(--accent);
  }

  .type-badge {
    flex-shrink: 0;
    font-size: 0.6rem;
    font-family: var(--mono);
    font-weight: 600;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    color: var(--accent);
    border: 1px solid var(--border-muted);
    border-radius: 4px;
    padding: 0.1rem 0.35rem;
  }

  .meta {
    display: flex;
    align-items: center;
    gap: 0.4rem;
    font-size: 0.75rem;
    font-family: var(--mono);
    color: var(--text-light);
  }

  .arrow {
    flex-shrink: 0;
    font-size: 0.875rem;
    color: var(--text-light);
    transition: var(--transition);
  }

  .watchlist-card:hover .arrow {
    color: var(--accent);
  }
</style>
