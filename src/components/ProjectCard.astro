---
// types
import type { CollectionEntry } from "astro:content";
export interface Props {
	project: CollectionEntry<"projects">;
}

// Components
import ProjectLinks from "@components/ProjectLinks.astro";

// Utils
import arrayToLongString from "../utils/arrayToLongString";

// props
const { project } = Astro.props as Props;
---

<div class="project-card" tags={arrayToLongString(project.data.tags)}>
	<div class="project-image">
		<img
			loading="lazy"
			src={`/assets/img/${project.data.id}-thumb.png`}
			alt={project.data.title}
		/>
	</div>
	<div class="project-info">
		<div>
			<div class="tags">
				{project.data.tags.map((tag) => <span class="tag">{tag}</span>)}
			</div>
			<h3 class="title">
				{project.data.title}
			</h3>
			<p class="project-description">
				{project.data.description}
			</p>
		</div>

		<div class="project-footer">
			<a href={`/projects/${project.slug}`} class="explore-link">
				Explore Project
				<div class="line"></div>
			</a>
			<ProjectLinks
				projectRepoId={project.data.repoId}
				projectLiveAt={project.data.liveAt}
			/>
		</div>
	</div>
</div>

<style>
	.project-card {
		display: flex;
		flex-direction: column;
		border: 1px solid var(--border);
		border-radius: var(--radius);
		overflow: hidden;
		transition: var(--transition);
	}

	/* Info Section */
	.project-info {
		padding: 1rem;
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		gap: 1.25rem;
	}

	.tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
		margin-bottom: 1rem;
	}

	.tag {
		font-size: 0.65rem;
		font-weight: 800;
		text-transform: uppercase;
		letter-spacing: 0.08em;
		color: var(--accent);
		background-color: var(--accent-bg);
		padding: 0.25rem 0.6rem;
		border-radius: 4px;
	}

	.title {
		margin: 0;
		margin-bottom: 0.75rem;
		font-size: 1.75rem;
		font-weight: 800;
		letter-spacing: -0.03em;
		line-height: 1.2;
	}

	.description {
		margin: 0;
		font-size: 1rem;
		color: var(--text-muted);
		line-height: 1.6;
		display: -webkit-box;
		-webkit-line-clamp: 3;
		-webkit-box-orient: vertical;
		overflow: hidden;
	}

	/* Footer Actions */
	.project-footer {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}

	.explore-link {
		text-decoration: none;
		font-weight: 700;
		font-size: 0.875rem;
		color: var(--accent);
	}

	.explore-link .line {
		width: 40%;
		height: 2px;
		background-color: var(--accent);
		margin-top: 4px;
		transition: width 0.3s cubic-bezier(0.4, 0, 0.2, 1);
	}

	.explore-link:hover .line {
		width: 100%;
	}

	/* Visual Section */
	.project-image {
		width: 100%;
		height: 240px;
		overflow: hidden;
	}

	.project-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		display: block;
		transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
	}

	.project-card:hover img {
		transform: scale(1.05);
	}

	@media (min-width: 840px) {
		.project-card {
			flex-direction: row;
		}

		.project-info {
			padding: 1.5rem;
		}

		.project-image {
			width: 320px;
			height: auto; /* Stretches to full height in flex row */
			flex-shrink: 0;
		}

		.project-image img {
			height: 100%;
		}

		.title {
			font-size: 2.25rem;
		}
	}
</style>
