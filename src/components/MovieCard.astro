---
import type { TMDBMedia } from "@utils/tmdb";

interface Props {
  media: TMDBMedia;
  note?: string;
}

const { media, note } = Astro.props;
const typeLabel = media.mediaType === "movie" ? "Film" : "Show";
---

<a
  href={media.tmdbUrl}
  target="_blank"
  rel="noopener noreferrer"
  class="movie-card"
  title={media.title}
>
  {
    media.posterUrl ? (
      <img
        src={media.posterUrl}
        alt={media.title}
        loading="lazy"
        class="poster"
      />
    ) : (
      <div class="poster placeholder" aria-hidden="true" />
    )
  }

  <div class="overlay">
    <span class="type-badge">{typeLabel}</span>
    <div class="overlay-body">
      <h3 class="title">{media.title}</h3>
      <p class="meta">
        {media.year}{media.rating > 0 ? ` · ★ ${media.rating}` : ""}
      </p>
      <!-- {note && <p class="note">{note}</p>} -->
    </div>
  </div>
</a>

<style>
  .movie-card {
    position: relative;
    display: block;
    border-radius: 10px;
    overflow: hidden;
    aspect-ratio: 2 / 3;
    background: var(--bg-soft);
    box-shadow: inset 0 0 0 1px var(--border);
    text-decoration: none;
    transition:
      transform 0.2s ease,
      box-shadow 0.2s ease;
  }

  .movie-card:hover {
    transform: translateY(-3px);
    box-shadow:
      inset 0 0 0 1px var(--border),
      0 8px 24px rgba(0, 0, 0, 0.18);
  }

  .poster {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .placeholder {
    width: 100%;
    height: 100%;
    background: var(--accent-bg);
  }

  .overlay {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.82) 0%,
      rgba(0, 0, 0, 0.3) 55%,
      transparent 100%
    );
    padding: 0.75rem;
  }

  .type-badge {
    position: absolute;
    top: 0.625rem;
    left: 0.625rem;
    font-size: 0.6rem;
    font-family: var(--mono);
    font-weight: 700;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    background: rgba(0, 0, 0, 0.55);
    color: rgba(255, 255, 255, 0.85);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 4px;
    padding: 0.15rem 0.4rem;
    backdrop-filter: blur(4px);
  }

  .overlay-body {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .title {
    margin: 0;
    font-size: 0.875rem;
    font-weight: 600;
    color: #fff;
    line-height: 1.25;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .meta {
    margin: 0;
    font-size: 0.7rem;
    font-family: var(--mono);
    color: rgba(255, 255, 255, 0.55);
    letter-spacing: 0.02em;
  }

  .note {
    margin: 0.25rem 0 0;
    font-size: 0.75rem;
    font-style: italic;
    color: rgba(255, 255, 255, 0.7);
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    border-left: 2px solid var(--accent);
    padding-left: 0.5rem;
  }
</style>
