---
import type { SpotifyTrack } from "@utils/spotify";

interface Props {
  track: SpotifyTrack;
  rank: number;
}

const { track, rank } = Astro.props;
---

<div class="track-item">
  <span class="rank">{rank}</span>
  <img
    src={track.image}
    alt={track.name}
    width="48"
    height="48"
    loading="lazy"
    class="track-img"
  />
  <div class="track-info">
    <a
      href={track.url}
      target="_blank"
      rel="noopener noreferrer"
      class="track-name"
    >
      {track.name}
    </a>
    <span class="track-artists">{track.artists.join(", ")}</span>
  </div>
</div>

<style>
  .track-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.75rem 0;
    border-bottom: 1px solid var(--border-muted);
  }

  .track-item:last-child {
    border-bottom: none;
  }

  .rank {
    font-size: 0.75rem;
    color: var(--text-light);
    font-family: var(--mono);
    width: 1.25rem;
    text-align: right;
    flex-shrink: 0;
  }

  .track-img {
    width: 48px;
    height: 48px;
    border-radius: 4px;
    object-fit: cover;
    flex-shrink: 0;
    border: 1px solid var(--border);
  }

  .track-info {
    display: flex;
    flex-direction: column;
    gap: 0.2rem;
    min-width: 0;
  }

  .track-name {
    color: var(--text);
    font-weight: 500;
    font-size: 0.9375rem;
    text-decoration: none;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    transition: var(--transition);
  }

  .track-name:hover {
    color: var(--accent);
    text-decoration: none;
  }

  .track-artists {
    font-size: 0.8125rem;
    color: var(--text-light);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
</style>
