---
import OpenGraphImage from "../components/OpenGraphImage.astro";
// import BaseLayout from "../layouts/BaseLayout.astro";

// We might not want to use the full BaseLayout because it includes
// headers/footers that aren't needed for the OG image preview.
// But some global styles might be useful.
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Open Graph Image Generator</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #0f1117;
        color: #f9fafb;
        font-family: "Inter", sans-serif;
        margin: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        padding: 2rem;
      }

      .container {
        display: flex;
        flex-direction: column;
        gap: 2rem;
        align-items: center;
      }

      .preview-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #9ca3af;
      }

      .actions {
        display: flex;
        gap: 1rem;
      }

      button {
        background: #2563eb;
        color: white;
        border: none;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
        box-shadow:
          0 4px 6px -1px rgba(0, 0, 0, 0.1),
          0 2px 4px -1px rgba(0, 0, 0, 0.06);
      }

      button:hover {
        background: #1d4ed8;
        transform: translateY(-1px);
        box-shadow:
          0 10px 15px -3px rgba(0, 0, 0, 0.1),
          0 4px 6px -2px rgba(0, 0, 0, 0.05);
      }

      button:active {
        transform: translateY(0);
      }

      .instructions {
        max-width: 600px;
        text-align: center;
        color: #6b7280;
        font-size: 0.875rem;
      }

      #og-image-wrapper {
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
        border-radius: 20px;
        overflow: hidden;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1 class="preview-title">Open Graph Image Preview</h1>

      <div id="og-image-wrapper">
        <OpenGraphImage />
      </div>

      <div class="actions">
        <button id="download-btn">Download PNG</button>
      </div>

      <div class="instructions">
        <p>
          Format: 1200x630px. Designed for high-contrast visibility on social
          platforms.
        </p>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/html-to-image@1.11.11/dist/html-to-image.min.js"
    ></script>
    <script is:inline>
      document
        .getElementById("download-btn")
        .addEventListener("click", async () => {
          const node = document.getElementById("og-image");
          const btn = document.getElementById("download-btn");

          if (!node) {
            alert("Target element not found.");
            return;
          }

          btn.innerText = "Generating...";
          btn.disabled = true;

          try {
            // Wait a tiny bit for any potential transitions/fonts
            await new Promise((r) => setTimeout(r, 100));

            const dataUrl = await htmlToImage.toPng(node, {
              width: 1200,
              height: 630,
              cacheBust: true,
              style: {
                transform: "none",
                margin: "0",
              },
            });

            const link = document.createElement("a");
            link.download = `og-avinash-${Date.now()}.png`;
            link.href = dataUrl;
            link.click();
          } catch (error) {
            console.error("oops, something went wrong!", error);
            alert(
              "Failed to generate image. Try using a Chromium browser or taking a manual screenshot.",
            );
          } finally {
            btn.innerText = "Download PNG";
            btn.disabled = false;
          }
        });
    </script>
  </body>
</html>
