---
// layout
import PageLayout from "@layouts/PageLayout.astro";

import EmailSVG from "@icons/EmailSVG.astro";

// data
import { socials } from "src/constants";
---

<PageLayout tabTitle="Contact">
	<h1>Get in touch</h1>
	<b>
		Got an interesting project you're working on, or just want to say hi?
	</b>
	<p>I'd love to hear from you! The best way to reach me is through email.</p>

	<h3 class="contact">
		<EmailSVG />
		<span>Email:</span>
		<a href={`mailto:${socials.email}`}>{socials.email}</a>
	</h3>

	<p class="notice">
		<b>Spam prevention:</b>
		Above email address changes over time. Saving for future communication is
		not recommended.
	</p>

	<h3>What to Expect</h3>
	<ul>
		<li>Response within 24-48 hours</li>
		<li>For project inquiries, include details and timeline</li>
		<li>Open to collaboration and learning opportunities</li>
	</ul>

	<h3>Find Me Online</h3>
	<p>
		<a href={socials.linkedin} target="_blank" rel="noopener">LinkedIn</a> •
		<a
			href={`https://github.com/${socials.githubUsername}`}
			target="_blank"
			rel="noopener">GitHub</a
		> •
		<a href={socials.mastodon} target="_blank" rel="noopener">Mastodon</a>
	</p>
</PageLayout>

<style>
	.contact {
		display: flex;
		justify-content: center;
		gap: 10px;
		align-items: center;
	}
	@media screen and (max-width: 650px) {
		.contact :global(svg),
		.contact span {
			display: none;
		}
	}
	.notice {
		background: var(--accent-bg);
		border: 2px solid var(--border);
		border-radius: 5px;
		padding: 1.5rem;
	}
</style>
