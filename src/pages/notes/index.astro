---
import { getCollection } from "astro:content";

// layout
import PageLayout from "@layouts/PageLayout.astro";

// fetching notes to display
const allNotes = await getCollection("notes");
---

<PageLayout
	tabTitle="Notes"
	description="A collection of public notes, thoughts, and ideas by Avinash. Often updated and occasionally unpolished."
>
	<h1>My public notes</h1>
	<p>
		The content in my notes gets often updated to my current opinions. Notes
		may be unfinished, unpolished. I write to record my thoughts, ideas and
		opinions.
	</p>
	<ul>
		{
			allNotes.map((note) => {
				return (
					<li>
						<a href={`/notes/${note.slug}`}>{note.data.title}</a>
					</li>
				);
			})
		}
	</ul>
</PageLayout>
