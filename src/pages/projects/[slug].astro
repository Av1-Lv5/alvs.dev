---
// Layout
import { CollectionEntry, getEntryBySlug } from "astro:content";
import ProjectPageLayout from "../../layouts/ProjectPageLayout.astro";

export async function getStaticPaths() {
	const projects: CollectionEntry<"projects">[] = [];
	projects[0] = await getEntryBySlug("projects", "markdown-editor");
	projects[1] = await getEntryBySlug("projects", "alvs");
	projects[2] = await getEntryBySlug("projects", "photosnap");
	projects[3] = await getEntryBySlug("projects", "audiophile");

	return projects.map((project) => ({
		params: {
			slug: project.slug,
		},
		props: {
			project,
		},
	}));
}

// types
export type Props = {
	project: CollectionEntry<"projects">;
};

// Props
const { project } = Astro.props;
const { Content } = await project.render();
---

<ProjectPageLayout project={project}>
	<Content />
</ProjectPageLayout>
